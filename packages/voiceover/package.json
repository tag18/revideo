{
  "name": "@revideo/voiceover",
  "version": "0.1.0",
  "description": "Voiceover plugin for Revideo",
  "main": "lib/client/index.js",
  "module": "lib/client/index.js",
  "types": "lib/client/index.d.ts",
  "scripts": {
    "build": "npm run client:build && npm run server:build",
    "client:build": "tsc --project client/tsconfig.json",
    "client:dev": "tsc -w --project client/tsconfig.json",
    "server:build": "tsc --project server/tsconfig.json",
    "server:dev": "tsc -w --project server/tsconfig.json",
    "test": "vitest"
  },
  "dependencies": {
    "@revideo/2d": "^0.10.4",
    "@revideo/core": "^0.10.4",
    "microsoft-cognitiveservices-speech-sdk": "^1.40.0",
    "vite": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1"
  },
  "files": [
    "lib"
  ],
  "exports": {
    ".": {
      "import": "./lib/client/index.js",
      "require": "./lib/client/index.js",
      "types": "./lib/client/index.d.ts"
    },
    "./server": {
      "import": "./lib/server/index.js",
      "require": "./lib/server/index.js",
      "types": "./lib/server/index.d.ts"
    }
  }
}
